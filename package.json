{
  "name": "@mbarlocker/typescript-config",
  "type": "commonjs",
  "version": "0.0.2",
  "author": "Matthew Barlocker",
  "description": "Remote, reloadable, typesafe configuration for node apps.",
  "license": "MIT",
  "packageManager": "yarn@4.3.1",
  "homepage": "https://github.com/mbarlocker/typescript-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbarlocker/typescript-config.git"
  },
  "files": [
    "dist",
    "package.json",
    "yarn.lock",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "yarn compile",
    "clean": "rm -rf dist coverage",
    "compile": "yarn compile:cjs && yarn compile:esm",
    "compile:cjs": "tsc -p tsconfig.cjs.json",
    "compile:esm": "tsc -p tsconfig.esm.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "env TZ=UTC vitest src --coverage --run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@types/node": "^20.14.12",
    "tslib": "^2.6.3"
  },
  "keywords": [
    "config",
    "configuration",
    "reloadable",
    "typescript"
  ]
}
